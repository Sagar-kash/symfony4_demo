{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Created Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.name }}</td>
                <td>{{ employee.address }}</td>
                <td>{{ employee.modifiedDate| customdate }}</td>
                <td>
                    <a href="{{ path('employee_show', { 'id': employee.id }) }}" class="btn btn-info" role="button">show</a>
                    <a href="{{ path('employee_edit', { 'id': employee.id }) }}" class="btn btn-info" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('employee_new') }}" class="btn btn-info" role="button">Create a new employee</a>
    <a href="{{ path('department_index') }}" class="btn btn-info">Department list</a>
{% endblock %}