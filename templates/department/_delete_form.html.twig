    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ department.id) }}">
    <a href="{{ path('department_index') }}" class="btn btn-info">Back to the list</a>
    <a href="{{ path('employee_index') }}" class="btn btn-info">Employee list</a>
    <button class="btn">Delete</button>
</form>